@model Cliente
@{
    ViewData["Title"] = "Detalles cliente";
}
<h1>@ViewData["Title"]</h1>

<p>En esta pagina puede ver los datos de un cliente a detalle.</p>
<form method="post">

    <div class="mb-3">
        <label>Cedula</label>
        <input asp-for="Cedula" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Dirección</label>
        <input asp-for="Direccion" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Animal comprado</label>
        <input asp-for="AnimalComprado" class="form-control" disabled>
    </div>

    <div class="row">
        <div class=" m-auto">

            <a asp-action="Index" class="btn btn-primary">Regresar</a>
        </div>
    </div>

</form>
